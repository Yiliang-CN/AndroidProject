<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!--图片 名称 评分 时间 内容-->

    <ImageView
        android:id="@+id/cmtUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cmt" />

    <TextView
        android:id="@+id/cmtUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/cmtUserImage"
        android:gravity="center_vertical"
        android:text="用户名"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cmtScore"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/cmtUserName"
        android:layout_toEndOf="@+id/cmtUserImage"
        android:gravity="center_vertical"
        android:text="评分"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cmtTime"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/cmtUserName"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="时间"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cmtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmtScore"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/cmtUserImage"
        android:maxLines="6"
        android:minLines="3"
        android:text="内容"
        android:textSize="16sp" />

</RelativeLayout>